#!/usr/bin/python3
"""Script stating if a number is odd or even"""
from flask import Flask

app = Flask(__name__)

@app.route('/', strict_slashes=False)
def hello_hbnb():
    """Function to print Hello HBNB!"""
    return 'Hello HBNB!'

@app.route('/hbnb', strict_slashes=False)
def hbnb():
    """Function to print HBNB"""
    return 'HBNB'

@app.route('/c/<text>', strict_slashes=False)
def c_text(text):
    """Function to print C followed by text"""
    return 'C {}'.format(text.replace('_', ' '))

@app.route('/python/', defaults={'text': 'is cool'}, strict_slashes=False)

@app.route('/python/<text>', strict_slashes=False)
def python_text(text):
    """Function to print Python followed by text"""
    return 'Python {}'.format(text.replace('_', ' '))


@app.route('/number/<int:n>', strict_slashes=False)
def number(n):
    """Function to print a number"""
    return '{} is a number'.format(n)

@app.route('/number_template/<int:n>', strict_slashes=False)
def number_template(n):
    """Function to print a number"""
    return render_template('5-number.html', n=n)

@app.route('/number/<int:n>', strict_slashes=False)
def number_odd_or_even(n):
    """Function to print if a number is odd or even"""
    if n % 2 == 0:
        return '{} is even'.format(n)
    else:
        return '{} is odd'.format(n)

